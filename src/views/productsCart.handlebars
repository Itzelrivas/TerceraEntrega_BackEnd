<h1 style="background-color: rgb(0, 0, 0); padding: 2%; color: rgb(238, 229, 254)">Productos del carrito con id={{productsCart.id}}: </h1>
{{#if productsCart.none}}
    <h3 style="padding: .5%; color: rgb(168, 69, 69); background-color: rgba(168, 69, 69, 0.332); text-align: center;">{{productsCart.none}}</h3>
{{/if}}
<div id="productContainer">
    {{#each productsCart}}
    <div class="containerCart">
        <h2 style="color: beige">{{this.title}}</h2>
        <h3>Descripción: {{this.description}}</h3>
        <h3>Código: {{this.code}}</h3>
        <h3>Categoría: {{this.category}}</h3>
        <h3>Piezas disponibles: {{this.stock}}</h3>
        <h3>Precio: ${{this.price}}</h3>
    
        {{#each this.thumbnail}}
            <img style="width: 20%;" src="/img/{{this}}" alt="{{../title}}"></img>
        {{/each}}
        
    </div>
    {{/each}}
</div>